/**
 * Prints all arguments as drupal messages
 */
function scc_debug() {
	
	$args = func_get_args();
	
	foreach($args as $arg) {
		drupal_set_message('<pre>' . print_r($arg, true) . '</pre>', 'warning');
	}
	
}


